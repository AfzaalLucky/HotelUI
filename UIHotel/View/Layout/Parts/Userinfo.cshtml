@using UIHotel.App.Provider
@using UIHotel.App.Auth
@using UIHotel.Data.Table

@{ 
    User user = AuthState.User();
    AuthLevel level =(AuthLevel)user.Permission;
    string logoUrl = "http://localhost.com/Upload/" + SettingProvider.HotelLogo;
}

<div class="user">
    <div class="user__info" data-toggle="dropdown">
        <img class="user__img" src="@logoUrl" alt="">
        <div>
            <div class="user__name">@user.Fullname</div>
            <div class="user__email">@level.ToString()</div>
        </div>
    </div>

    <div class="dropdown-menu">
        <a class="dropdown-item" href="">View Profile</a>
        <a class="dropdown-item" href="">Settings</a>
        <a class="dropdown-item" href="">Logout</a>
    </div>
</div>