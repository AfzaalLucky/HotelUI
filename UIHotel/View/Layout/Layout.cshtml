<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @Include("Layout/Parts/BaseCSS.cshtml")
</head>

<body data-ma-theme="blue-grey">
    <main class="main">
        @Include("Layout/Parts/PageLoader.cshtml")

        <header class="header">
            @Include("Layout/Parts/TitleNav.cshtml")
            @Include("Layout/Parts/SearchNav.cshtml")
            @Include("Layout/Parts/TopNav.cshtml")
        </header>

        <aside class="sidebar">
            <div class="scrollbar-inner">
                @Include("Layout/Parts/Userinfo.cshtml")
                @Include("Layout/Parts/Menubar.cshtml")
            </div>
        </aside>

        @Include("Layout/Parts/Chatbar.cshtml")

        <section class="content">
            <header class="content__title">
                <h1>Dashboard</h1>
                <small>Welcome to the unique Material Design admin web app experience!</small>

                <div class="actions">
                    <a href="" class="actions__item zmdi zmdi-trending-up"></a>
                    <a href="" class="actions__item zmdi zmdi-check-all"></a>

                    <div class="dropdown actions__item">
                        <i data-toggle="dropdown" class="zmdi zmdi-more-vert"></i>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="" class="dropdown-item">Refresh</a>
                            <a href="" class="dropdown-item">Manage Widgets</a>
                            <a href="" class="dropdown-item">Settings</a>
                        </div>
                    </div>
                </div>
            </header>

            @RenderBody()

            @Include("Layout/Parts/Footer.cshtml")
        </section>
    </main>

    @Include("Layout/Parts/IEWarn.cshtml")
    @Include("Layout/Parts/BaseJS.cshtml")
</body>
</html>