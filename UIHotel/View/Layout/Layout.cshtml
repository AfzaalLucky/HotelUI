<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@RenderSection("title", required: false)</title>

    @Include("Layout.Parts.BaseCSS")
</head>

<body data-ma-theme="blue-grey">
    <main class="main" id="app">
        <v-app id="inspire">
            @Include("Layout.Parts.PageLoader")

            <header class="header">
                @Include("Layout.Parts.TitleNav")
                @Include("Layout.Parts.TopNav")
            </header>

            <aside class="sidebar">
                <div class="scrollbar-inner">
                    @Include("Layout.Parts.Userinfo")
                    @Include("Layout.Parts.Menubar")
                </div>
            </aside>

            @Include("Layout.Parts.Chatbar")

            <section class="content">
                @RenderBody()
            </section>
        </v-app>
    </main>

    @Include("Layout.Parts.BaseJS")
    @RenderSection("scripts", required: false)
</body>
</html>