@{
    Layout = "Layout";
}

@section title { Dashboard }

<v-container fluid grid-list-md>
    <header class="content__title">
        <h1>Dashboard</h1>
        <small></small>

        <div class="actions">
            <a href="" class="actions__item zmdi zmdi-trending-up"></a>
            <a href="" class="actions__item zmdi zmdi-check-all"></a>

            <div class="dropdown actions__item">
                <i data-toggle="dropdown" class="zmdi zmdi-more-vert"></i>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="" class="dropdown-item">Refresh</a>
                    <a href="" class="dropdown-item">Manage Widgets</a>
                    <a href="" class="dropdown-item">Settings</a>
                </div>
            </div>
        </div>
    </header>

    <v-layout row class="quick-stats">
        <v-flex md3 sm6>
            <div class="quick-stats__item bg-light-blue">
                <div class="quick-stats__info">
                    <h2>406</h2>
                    <small>Total Tamu</small>
                </div>

                <div class="quick-stats__chart sparkline-bar-stats">6,4,8,6,5,6,7,8,3,5,9,5</div>
            </div>
        </v-flex>

        <v-flex md3 sm6>
            <div class="quick-stats__item bg-amber">
                <div class="quick-stats__info">
                    <h2>785</h2>
                    <small>Total Ruang Tersedia</small>
                </div>

                <div class="quick-stats__chart sparkline-bar-stats">4,7,6,2,5,3,8,6,6,4,8,6</div>
            </div>
        </v-flex>

        <v-flex md3 sm6>
            <div class="quick-stats__item bg-red">
                <div class="quick-stats__info">
                    <h2>214</h2>
                    <small>Total Ruang Terpakai</small>
                </div>

                <div class="quick-stats__chart sparkline-bar-stats">5,6,3,9,7,5,4,6,5,6,4,9</div>
            </div>
        </v-flex>

        <v-flex md3 sm6>
            <div class="quick-stats__item bg-purple">
                <div class="quick-stats__info">
                    <h2>Rp.58,778</h2>
                    <small>Total Pemasukan</small>
                </div>

                <div class="quick-stats__chart sparkline-bar-stats">9,4,6,5,6,4,5,7,9,3,6,5</div>
            </div>
        </v-flex>
    </v-layout>

    <v-layout row>
        <v-flex md12>
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Main Menu</h2>
                    <small class="card-subtitle"></small>
                </div>

                <div class="card-block pb-4">
                    <div class="card widget-pie">
                        <v-layout row>
                            <v-flex lg4 md3 sm4 class="widget-pie__item">
                                <a href="http://localhost.com/checkin/get/index">
                                    <div class="widget-pie__title"><i class="zmdi zmdi-hc-4x zmdi-swap-vertical"></i></div>
                                    <div class="widget-pie__title">Check In</div>
                                </a>
                            </v-flex>

                            <v-flex lg4 md3 sm4 class="widget-pie__item">
                                <a href="http://localhost.com/checkin/get/booking">
                                    <div class="widget-pie__title"><i class="zmdi zmdi-hc-4x zmdi-bookmark"></i></div>
                                    <div class="widget-pie__title">Booking</div>
                                </a>
                            </v-flex>

                            <v-flex lg4 md3 sm4 class="widget-pie__item">
                                <a href="http://localhost.com/checkin/get/checkout">
                                    <div class="widget-pie__title"><i class="zmdi zmdi-hc-4x zmdi-account"></i></div>
                                    <div class="widget-pie__title">Tamu</div>
                                </a>
                            </v-flex>
                        </v-layout>
                        <v-layout row>
                            <v-flex lg4 md3 sm4 class="widget-pie__item">
                                <a href="http://localhost.com/money/get/transaksi">
                                    <div class="widget-pie__title"><i class="zmdi zmdi-hc-4x zmdi-money"></i></div>
                                    <div class="widget-pie__title">Transaksi</div>
                                </a>
                            </v-flex>

                            <v-flex lg4 md3 sm4 class="widget-pie__item">
                                <a>
                                    <div class="widget-pie__title"><i class="zmdi zmdi-hc-4x zmdi-trending-up"></i></div>
                                    <div class="widget-pie__title">Laporan</div>
                                </a>
                            </v-flex>

                            <v-flex lg4 md3 sm4 class="widget-pie__item">
                                <a href="http://localhost.com/room/get/index">
                                    <div class="widget-pie__title"><i class="zmdi zmdi-hc-4x zmdi-widgets"></i></div>
                                    <div class="widget-pie__title">Room</div>
                                </a>
                            </v-flex>
                        </v-layout>
                    </div>
                </div>
            </div>
        </v-flex>
    </v-layout>
</v-container>
